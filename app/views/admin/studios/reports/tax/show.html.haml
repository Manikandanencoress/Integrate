        }
    
%h1 Tax Report
- if !current_admin.studio.present?
  %form(action='/admin/studios/#{@studio.id}/reports/tax_report' method='get')
    %div
      %span 
        %b Select Studio
        = collection_select 'studio', 'id', @studios, 'id', 'name',{:prompt=>"All",:selected=>@current_selected} 
        %br
        %br
      %input{:type => "submit", :value=>"Filter",:name=>"submit"}
%br

%hr{:class => "greenBar"}      
%table.SalesReportTable{:id=>"taxreport"}
  %thead
    %tr
      %th{:rowspan=>2,:style=>"width:200px;font-size:12px;"} 
        %a{:href=>"Javascript:",:title=>"Click to Sort"}Movie
      %th{:rowspan=>2,:style=>"width:200px;font-size:12px;"} 
        %a{:href=>"Javascript:",:title=>"Click to Sort"}Tax Collected
      %th{:rowspan=>2,:style=>"width:200px;font-size:12px;"} 
        %a{:href=>"Javascript:",:title=>"Click to Sort"}Zip Code
      %th{:rowspan=>2,:style=>"width:200px;font-size:12px;"} 
        %a{:href=>"Javascript:",:title=>"Click to Sort"}Rented At
      %th{:rowspan=>2,:style=>"width:200px;font-size:12px;"} 
        %a{:href=>"Javascript:",:title=>"Click to Sort"}Facebook User
      %th{:rowspan=>2,:style=>"width:200px;font-size:12px;"} 
        %a{:href=>"Javascript:",:title=>"Click to Sort"}Facebook Order
      %th{:rowspan=>2,:style=>"width:200px;font-size:12px;"} 
        %a{:href=>"Javascript:",:title=>"Click to Sort"}Status
      %th{:rowspan=>2,:style=>"width:200px;font-size:12px;"} 
        %a{:href=>"Javascript:",:title=>"Click to Sort"}Total Credits
  - @orders.each do |order|
    %tr{:class => cycle(:odd, :even, :name => 'zebra_stripes')}
      %td= order.movie.title
      %td= format("%.2f",order.tax_collected) unless order.tax_collected.nil?
      %td= order.zip_code.to_s.rjust(5, '0')
      %td= order.rented_at.strftime('%m/%d/%y - %I:%M%p') unless order.rented_at.nil?
      %td= order.user.name
      %td= order.facebook_order_id
      %td= order.status
      %td= order.total_credits
